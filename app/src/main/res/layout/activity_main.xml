<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvFormula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:text="formula"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvFormula"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_MC"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="MC"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_MR"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="MR"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_MS"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="MS"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_M_plus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="M+"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_M_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="M-"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_backspace"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="⬅"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_CE"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="CE"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_C"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="C"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_plus_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="+/-"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_root"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="√"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_seven"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_eight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_nine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_divide"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="/"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_percentage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="%"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_four"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_five"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_six"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:text="*"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_fraction"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="1/x"
                android:textSize="20dp" />
        </LinearLayout>
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:rowOrderPreserved="true"
            android:columnCount="5"
            android:columnOrderPreserved="true">
            <Button
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="1"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="2"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:text="="
                android:textSize="20dp"
                android:backgroundTint="#BD0C48"/>
            <Button
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="0"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="."
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:backgroundTint="#BD0C48"
                android:text="+"
                android:textSize="20dp" />
        </GridLayout>
